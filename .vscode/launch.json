{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug iOS (Dev)",
      "type": "reactnative",
      "request": "launch",
      "platform": "ios",
      "target": "simulator",
      "cwd": "${workspaceFolder}/packages/app",
      "enableDebug": true,
      "env": {
        "NODE_ENV": "development"
      },
      "preLaunchTask": "Start Expo (Dev)",
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**"
      ]
    },
    {
      "name": "Debug Android (Dev)",
      "type": "reactnative",
      "request": "launch",
      "platform": "android",
      "cwd": "${workspaceFolder}/packages/app",
      "enableDebug": true,
      "env": {
        "NODE_ENV": "development"
      },
      "preLaunchTask": "Start Expo (Dev)",
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**"
      ]
    },
    {
      "name": "Attach to Packager (Dev)",
      "type": "reactnative",
      "request": "attach",
      "cwd": "${workspaceFolder}/packages/app",
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**"
      ]
    },
    {
      "name": "Debug iOS (Direct - No Packager)",
      "type": "reactnative",
      "request": "launch",
      "platform": "ios",
      "target": "simulator",
      "cwd": "${workspaceFolder}/packages/app",
      "enableDebug": true,
      "launchActivity": "expo-dev-client",
      "env": {
        "NODE_ENV": "development"
      },
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**"
      ]
    },
    {
      "name": "Debug Android (Direct - No Packager)",
      "type": "reactnative",
      "request": "launch",
      "platform": "android",
      "cwd": "${workspaceFolder}/packages/app",
      "enableDebug": true,
      "launchActivity": "expo-dev-client",
      "env": {
        "NODE_ENV": "development"
      },
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**"
      ]
    }
  ],
  "compounds": [
    {
      "name": "Debug iOS + Android (Dev)",
      "configurations": [
        "Debug iOS (Dev)",
        "Debug Android (Dev)"
      ],
      "stopAll": true
    }
  ]
}
