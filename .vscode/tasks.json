{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Expo (Dev)",
      "type": "shell",
      "command": "pnpm",
      "args": [
        "app:start"
      ],
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Starting Metro Bundler",
          "endsPattern": "(Waiting on|Metro.*ready|Logs for your project)"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": false,
        "clear": true
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "Stop Expo",
      "type": "shell",
      "command": "pnpm",
      "args": [
        "app:stop"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "Start Server (Dev)",
      "type": "shell",
      "command": "pnpm",
      "args": [
        "dev"
      ],
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "starting",
          "endsPattern": "(Server.*listening|Server started)"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": false
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    }
  ]
}
