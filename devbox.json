{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.16.0/.schema/devbox.schema.json",
  "packages": [
    "pnpm@10",
    "nodejs@24"
  ],
  "shell": {
    "init_hook": [
      "echo 'ðŸš€ Smart Pocket development environment ready!'",
      "echo 'Node.js version:' && node --version",
      "echo 'pnpm version:' && pnpm --version"
    ],
    "scripts": {
      "install": [
        "pnpm install"
      ],
      "dev": [
        "pnpm run dev"
      ],
      "build": [
        "pnpm run build"
      ],
      "test": [
        "pnpm run test"
      ]
    }
  }
}
