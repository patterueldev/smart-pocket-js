{
  "info": {
    "name": "Smart Pocket API",
    "description": "Smart Pocket personal finance management API with OCR receipt scanning.\n\nAuthentication Flow:\n1. Call POST /connect with X-API-Key to get bearer token\n2. Use bearer token for all subsequent requests\n3. Token expires after 30 days of inactivity",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_postman_id": "smart-pocket-api-v1"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{bearerToken}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3001/api/v1",
      "type": "string"
    },
    {
      "key": "apiKey",
      "value": "dev_api_key_change_me",
      "type": "string"
    },
    {
      "key": "bearerToken",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Connect (Get Bearer Token)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('bearerToken', response.token);",
                  "    console.log('Bearer token saved to collection variable');",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "X-API-Key",
                "value": "{{apiKey}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"deviceInfo\": {\n    \"platform\": \"iOS\",\n    \"appVersion\": \"1.0.0\",\n    \"deviceId\": \"test-device-123\"\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/connect",
              "host": ["{{baseUrl}}"],
              "path": ["connect"]
            },
            "description": "Exchange API key for bearer token. The token is automatically saved to the `bearerToken` collection variable."
          },
          "response": []
        },
        {
          "name": "Disconnect (Invalidate Token)",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/disconnect",
              "host": ["{{baseUrl}}"],
              "path": ["disconnect"]
            },
            "description": "Invalidate the current bearer token"
          },
          "response": []
        }
      ],
      "description": "Authentication endpoints. Use /connect first to get bearer token."
    },
    {
      "name": "Health",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/health",
              "host": ["{{baseUrl}}"],
              "path": ["health"]
            },
            "description": "Public health check endpoint (no authentication required)"
          },
          "response": []
        }
      ]
    },
