{
  "cli": {
    "version": ">= 7.0.0"
  },
  "build": {
    "development": {
      "channel": "development",
      "distribution": "internal",
      "env": {
        "VARIANT": "development",
        "API_ENDPOINT": "http://localhost:3001",
        "OCR_ENABLED": "false"
      },
      "android": {
        "buildType": "apk",
        "applicationIdSuffix": ".dev"
      },
      "ios": {
        "bundleIdentifier": "com.smartpocket.dev"
      }
    },
    "qa": {
      "channel": "qa",
      "distribution": "internal",
      "env": {
        "VARIANT": "qa",
        "API_ENDPOINT": "http://localhost:3002",
        "OCR_ENABLED": "false"
      },
      "android": {
        "buildType": "apk",
        "applicationIdSuffix": ".qa"
      },
      "ios": {
        "bundleIdentifier": "com.smartpocket.qa"
      }
    },
    "production": {
      "channel": "production",
      "distribution": "internal",
      "env": {
        "VARIANT": "production",
        "API_ENDPOINT": "https://smartpocket.example.com",
        "OCR_ENABLED": "false"
      },
      "android": {
        "buildType": "apk"
      },
      "ios": {
        "bundleIdentifier": "com.smartpocket.app"
      }
    }
  },
  "submit": {
    "production": {
      "android": {
        "serviceAccount": "./deploy/secrets/google-play-service-account.json",
        "track": "production"
      }
    }
  }
}
