{
  "name": "smart-pocket",
  "version": "0.1.0",
  "private": true,
  "description": "Smart Pocket - Personal finance management with OCR receipt scanning",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --filter @smart-pocket/server dev",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "test:coverage": "pnpm -r test -- --coverage",
    "docker:dev": "./deploy/scripts/dev.sh",
    "docker:restart": "docker compose -f deploy/docker/docker-compose.dev.yml restart",
    "docker:recreate": "docker compose -f deploy/docker/docker-compose.dev.yml up -d --force-recreate",
    "docker:down": "docker compose -f deploy/docker/docker-compose.dev.yml down",
    "docker:logs": "docker compose -f deploy/docker/docker-compose.dev.yml logs -f",
    "docker:prod": "./deploy/scripts/prod.sh",
    "docker:test": "./deploy/scripts/test.sh",
    "docker:build": "./deploy/scripts/build.sh",
    "docker:push": "./deploy/scripts/push.sh",
    "deploy": "./deploy/scripts/deploy.sh",
    "test:api": "./deploy/scripts/test-api.sh",
    "test:build": "./deploy/scripts/test-build.sh",
    "test:smoke": "./deploy/scripts/smoke-test.sh"
  },
  "keywords": [
    "finance",
    "budget",
    "ocr",
    "receipt-scanner"
  ],
  "author": "Smart Pocket",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "devDependencies": {
    "pnpm": "^8.0.0"
  }
}
