{
  "name": "smart-pocket",
  "version": "0.1.0",
  "private": true,
  "description": "Smart Pocket - Personal finance management with OCR receipt scanning",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --filter @smart-pocket/server dev",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "test:coverage": "pnpm -r test -- --coverage",
    "postman:generate": "node scripts/generate-postman.js",
    "docker:dev": "./deploy/scripts/dev.sh",
    "docker:quality": "./deploy/scripts/quality.sh",
    "docker:prod": "./deploy/scripts/prod.sh",
    "docker:test": "./deploy/scripts/test.sh",
    "docker:build": "./deploy/scripts/build.sh",
    "docker:migrate": "./deploy/scripts/migrate.sh",
    "test:api": "./deploy/scripts/test-api.sh"
  },
  "keywords": [
    "finance",
    "budget",
    "ocr",
    "receipt-scanner"
  ],
  "author": "Smart Pocket",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "devDependencies": {
    "js-yaml": "^4.1.1",
    "pnpm": "^8.0.0"
  }
}
